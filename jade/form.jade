extends layout

block content
  .row.page-header
    .col-lg-12
      h1= Form example
      .row
        .col-xs-12.col-md-6
          form.form-horizontal(action='/url', method='get', role='form')
            .form-group
              label.col-xs-10.col-sm-2.control-label(for='form1') Form 1
              .col-xs-12.col-sm-10
                input#form1.form-control(name='form1')
            .form-group
              label.col-xs-10.col-sm-2.control-label(for='form2') Form 2
              .col-xs-12.col-sm-2
                select#form2.form-control.input-sm(name='form2')
                  option 5
                  option 4
                  option 3
                  option 2
                  option 1
            .form-group
              label.col-sm-2.control-label(for='form3') Form 3
              .col-sm-10
                textarea#form3.form-control(name='form3', rows='5')
            button.btn.btn-default.pull-right Submit
        .col-xs-12.col-md-4
        
